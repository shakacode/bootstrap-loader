  navbar: true
  pagination: true
  progress: true
  responsive-embed: true
  transitions: true

  # Components w/ JavaScript
  carousel: true
  modal: true
  popover: true
  tooltip: true

  # Utility classes
  utilities: true

### Bootstrap scripts
scripts:
